import cv2
import mediapipe as mp
import time

import numpy
import numpy as np

cap = cv2.VideoCapture(0)

mpHands = mp.solutions.hands
hands = mpHands.Hands()
mpDraw = mp.solutions.drawing_utils #Draw the points

prev_time = 0
cur_time = 0

while True:
    success, img = cap.read()
    imgRGB = cv2.cvtColor(img, cv2.COLOR_BGR2RGB) #hands object uses RGB images
    results = hands.process(numpy.array(imgRGB)) #To process the frame
    # print(results.multi_hand_landmarks)

    if results.multi_hand_landmarks:
        for handLms in results.multi_hand_landmarks:
            for id, lm in enumerate(handLms.landmark): # Get ind for finger landmark
                # print(id, lm)
                h, w, c = img.shape
                cx, cy = int(lm.x*w), int(lm.y*h) #Find the position of the center

                print(id, cx, cy)
                if id == 0:
                    cv2.circle(img, (int(cx), int(cy)), 25, (0, 255, 0), cv2.FILLED)

            mpDraw.draw_landmarks(img, handLms, mpHands.HAND_CONNECTIONS) # Draw the lines with the connection in hand

    cur_time = time.time()
    fps = 1 / (cur_time - prev_time)
    prev_time = cur_time

    # Print the frame rate
    cv2.putText(img, str(int(fps)), (10, 70), cv2.FONT_HERSHEY_PLAIN, 3, (0, 255, 0), 3)


    cv2.imshow('Img', img)
    cv2.waitKey(1)